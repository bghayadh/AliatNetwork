<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A5EA8">


    <TextView
        android:id="@+id/txtItemCode"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_column="1"
        android:textColor="@color/yellow"
        android:gravity="left"
        android:text="Item Code"
        />
    <EditText
        android:id="@+id/itemCode"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/txtItemCode"
        android:textSize="13dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_column="1"
        android:hint="Item Code"
        android:textColor="@color/white"
        android:gravity="left"
        />
    <TextView
        android:id="@+id/txtSerialNumber"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:text="Serial Number"
        android:layout_below="@+id/txtItemCode"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_column="1"
        android:textColor="@color/yellow"
        android:gravity="left"
        />
    <EditText
        android:id="@+id/serialNumber"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:layout_below="@+id/itemCode"
        android:layout_toRightOf="@id/txtSerialNumber"
        android:textStyle="bold"
        android:padding="10dp"
        android:hint="Serial Number"
        android:layout_column="1"
        android:textColor="@color/white"
        android:gravity="left"
        />

    <TextView
        android:id="@+id/txtBarcodeNumber"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:text="Barcode"
        android:layout_below="@+id/txtSerialNumber"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_column="1"
        android:textColor="@color/yellow"
        android:gravity="left"
        />
    <EditText
        android:id="@+id/barcodeNumber"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:layout_below="@+id/serialNumber"
        android:layout_toRightOf="@id/txtBarcodeNumber"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_column="1"
        android:hint="Barcode"
        android:textColor="@color/white"
        android:gravity="left"
        />
    <TextView
        android:id="@+id/txtQuantity"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:text="Quantity"
        android:layout_below="@+id/txtBarcodeNumber"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_column="1"
        android:textColor="@color/yellow"
        android:gravity="left"
        />
    <EditText
        android:id="@+id/quatity"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:layout_below="@+id/barcodeNumber"
        android:layout_toRightOf="@id/txtQuantity"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_column="1"
        android:textColor="@color/white"
        android:hint="Quamtity"
        android:gravity="left"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdate"
        android:text="Edit"
        android:backgroundTint="@color/red"
        android:layout_below="@+id/quatity"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnClose"
        android:layout_marginStart="5dp"
        android:text="Close"
        android:layout_toRightOf="@+id/btnUpdate"
        android:backgroundTint="@color/red"
        android:layout_below="@+id/quatity"/>


</RelativeLayout>